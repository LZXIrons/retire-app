/* pages/my/my.wxss */
.user-box{
    height:230rpx;
    margin-bottom:120rpx
}
.user-info {
    display: flex;
    align-items: center;
    color: #ffffff;
    background-color: #e04f4d;height: 150rpx;
}
.user-address{
    height: 160rpx;
    padding:0 20rpx;
    border-radius: 12rpx;
    background-color: #ffffff;
    display: flex;
    flex-direction: column;
    justify-content: center;
}
.user-pic {
    border-radius: 50%;
    border: 6rpx solid #ffffff;

}
.van-icon--image {
    width: 50rpx!important;
    height: 50rpx!important;
    margin-right: 10rpx;
}

.cell-wrap{
   background: #ffffff;
   border-radius: 12rpx;
   overflow: hidden;
   padding: 20rpx 0;
   /* box-shadow: 0px 0px 6px #ccc; */
}
.van-icon, .van-icon:before{
    vertical-align: middle;
}